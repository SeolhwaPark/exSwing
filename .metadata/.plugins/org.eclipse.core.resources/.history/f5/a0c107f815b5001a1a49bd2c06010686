package componet;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.ButtonGroup;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JList;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Exam08 {
	JFrame frm;
	JLabel lab1, lab2, lab3, lab4, lab5, lab6, lab7 ;
	JTextField tx1, tx2, tx3;
	ButtonGroup btng;
	JButton btn1, btn2, btn3;
	JPanel panel1, panel2, panel3, panel4, panel5, panel6, panelCenter;
	JList list;
	JTextArea txar;
	JComboBox combo;

	public Exam08() {
		frm = new JFrame("회원가입 Ver1.0");
		lab1 = new JLabel("회원가입", JLabel.CENTER);
		frm.add(BorderLayout.NORTH, lab1);

		// 이름
		lab2 = new JLabel("이    름:");
		tx1 = new JTextField();
		panel1 = new JPanel();
		panel1.add(lab2);
		panel1.add(tx1);

		// 아이디, 아이디 중복체크
		lab3 = new JLabel("I   D:");
		tx2 = new JTextField();
		btn3 = new JButton("아이디중복체크");
		panel2 = new JPanel();
		panel2.add(lab3);
		panel2.add(tx2);
		panel2.add(btn3);
		
		// 비밀번호
		lab4 = new JLabel("P   W:");
		tx3 = new JTextField();
		panel3 = new JPanel();
		panel3.add(lab4);
		panel3.add(tx3);

		// 성별
	//	lab5 = new JLabel("성   별:");

		// 직업
	//	lab6 = new JLabel("직   업:");
		combo = new JComboBox();
		combo.addItem("교사");
		combo.addItem("교원");
		combo.addItem("공무원");
		combo.addItem("기타");
		
		panel5 = new JPanel();
		panel5.add(new JLabel("직   업:"));
		panel5.add(combo);
		frm.add(BorderLayout.NORTH, panel5);


		// 자기소개
		txar = new JTextArea(5, 10);
		panel5 = new JPanel();
		panel5.add(new JLabel("자기소개"));
		panel5.add(txar);
		panelCenter.add(panel5);
		frm.add(BorderLayout.CENTER, panelCenter);

		panel4 = new JPanel();
		panel4.setLayout(new GridLayout(3, 1));// 3줄의 1칸짜리로 묶어서 부착시킴
		panel4.add(panel1);
		panel4.add(panel2);
		panel4.add(panel3);
		frm.add(BorderLayout.CENTER, panel4);

		btn1 = new JButton("회원가입");
		btn2 = new JButton("가입취소");
		panel5 = new JPanel();
		panel5.add(btn1);
		panel5.add(btn2);
		frm.add(BorderLayout.SOUTH, panel5);

		frm.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frm.setSize(500, 600);
		frm.setVisible(true);
	}

	public static void main(String[] args) {
		new Exam08();
	}
}
