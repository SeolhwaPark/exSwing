package componet;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.GridLayout;

import javax.swing.ButtonGroup;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JList;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Exam08 {
	JFrame frm;
	JLabel lab1, lab2, lab3, lab4, lab5, lab6, lab7;
	JTextField tx1, tx2, tx3;
	ButtonGroup btng;
	JButton btn1, btn2, btn3;
	JPanel panel1, panel2, panel3, panel4, panel5, panel6, panel7, panel8, panelCenter;
	JList list;
	JTextArea txar;
	JComboBox combo;
	JRadioButton rad1, rad2;

	public Exam08() {
		panelCenter = new JPanel(new GridLayout(7,1));
		frm = new JFrame("회원가입 Ver1.0");
		panel1 = new JPanel();
		panel1.add(new JLabel("회원가입"));
		frm.add(BorderLayout.CENTER, panel1);
		
		// 이름
		tx1 = new JTextField();
		panel2 = new JPanel();
		panel2.add(new JLabel("이    름:"));
		panel2.add(tx1);
		frm.add(BorderLayout.NORTH, panel2);

		// 아이디, 아이디 중복체크
		tx2 = new JTextField();
		panel3 = new JPanel();
		panel3.add(new JLabel("I   D"));
		btn3 = new JButton("아이디중복체크");
		panel3.add(tx2);
		panelCenter.add(panel3);
		panelCenter.add(btn3);
		frm.add(BorderLayout.NORTH, panelCenter);

		// 비밀번호
		tx3 = new JTextField();
		panel4 = new JPanel();
		panel4.add(new JLabel("P   W"));
		panel4.add(tx3);
		panelCenter.add(panel4);
		frm.add(BorderLayout.NORTH, panelCenter);

		// 성별
		rad1 = new JRadioButton("남", true);
		rad2 = new JRadioButton("여");
		btng = new ButtonGroup();
		btng.add(rad1);
		btng.add(rad2);
		panel5 = new JPanel(new FlowLayout(FlowLayout.LEFT));
		panel5.add(new JLabel("성   별:"));
		panel5.add(rad1);
		panel5.add(rad2);
		frm.add(BorderLayout.NORTH, panel5);

		// 직업
		combo = new JComboBox();
		combo.addItem("직업을 선택하세요");
		combo.addItem("교사");
		combo.addItem("교원");
		combo.addItem("공무원");
		combo.addItem("기타");

		panel5 = new JPanel();
		panel5.add(new JLabel("직   업"));
		panel5.add(combo);
		frm.add(BorderLayout.NORTH, panel5);

		// 자기소개
		txar = new JTextArea(5, 10);
		panel6 = new JPanel();
		panel6.add(new JLabel("자기소개"));
		panel6.add(txar);
		panelCenter.add(panel6);
		frm.add(BorderLayout.NORTH, panelCenter);

		panel7 = new JPanel();
		panel7.setLayout(new GridLayout(6, 1));
		panel7.add(panel1);
		panel7.add(panel2);
		panel7.add(panel3);
		panel7.add(panel4);
		panel7.add(panel5);
		panel7.add(panel6);
		frm.add(BorderLayout.NORTH, panel7);

		btn1 = new JButton("회원가입");
		btn2 = new JButton("가입취소");
		panel5 = new JPanel();
		panel5.add(btn1);
		panel5.add(btn2);
		frm.add(BorderLayout.SOUTH, panel5);

		frm.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frm.setSize(500, 700);
		frm.setVisible(true);
	}

	public static void main(String[] args) {
		new Exam08();
	}
}
